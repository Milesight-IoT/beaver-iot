{
  "type": "object",
  "required": ["definition"],
  "properties": {
    "definition": {
      "type": "object",
      "required": ["input"],
      "properties": {
        "input": {
          "type": "object",
          "required": ["type", "properties"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["object"]
            },
            "properties": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/definitions/Property"
              }
            }
          }
        },
        "output": {
          "type": "object",
          "required": ["type", "properties"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["object"]
            },
            "properties": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/definitions/Property"
              }
            }
          }
        }
      }
    },
    "initial_entities": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Entity"
      }
    }
  },
  "definitions": {
    "Property": {
      "type": "object",
      "required": ["key", "type"],
      "properties": {
        "key": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["object", "string", "long", "double", "boolean"]
        },
        "required": {
          "type": "boolean"
        },
        "entity_mapping": {
          "type": "string"
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Property"
          }
        },
        "value": {}
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": { "const": "object" }
            },
            "required": ["type"]
          },
          "then": {
            "not": {
              "required": ["value"]
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "boolean" },
              "value": {}
            },
            "required": ["type", "value"]
          },
          "then": {
            "properties": {
              "value": { "type": "boolean" }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "string" },
              "value": {}
            },
            "required": ["type", "value"]
          },
          "then": {
            "properties": {
              "value": { "type": "string" }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "long" },
              "value": {}
            },
            "required": ["type", "value"]
          },
          "then": {
            "properties": {
              "value": { "type": "integer" }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "double" },
              "value": {}
            },
            "required": ["type", "value"]
          },
          "then": {
            "properties": {
              "value": { "type": "number" }
            }
          }
        }
      ]
    },
    "BaseEntity": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_@#$\\-/\\[\\]]+$"
        },
        "name": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["property", "service", "event"]
        },
        "value_type": {
          "type": "string",
          "enum": ["object", "string", "long", "double", "boolean"]
        },
        "access_mod": {
          "type": "string",
          "enum": ["R", "W", "RW"]
        },
        "attributes": {
          "type": "object",
          "properties": {
            "unit": {"type": "string"},
            "min": {"type": "number"},
            "max": {"type": "number"},
            "min_length": {"type": "integer"},
            "max_length": {"type": "integer"},
            "length_range": {"type": "string"},
            "fraction_digits": {"type": "integer"},
            "format": {"type": "string"},
            "enum": {"type": "object"},
            "optional": {"type": "boolean"}
          }
        },
        "visible": {
          "type": "boolean"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ChildEntity"
          }
        }
      }
    },
    "Entity": {
      "allOf": [
        { "$ref": "#/definitions/BaseEntity" },
        {
          "required": ["identifier", "name", "type", "value_type"]
        },
        {
          "if": {
            "properties": {
              "value_type": { "const": "object" }
            },
            "required": ["value_type"]
          },
          "then": {
            "required": ["children"]
          },
          "else": {
            "not": {
              "required": ["children"]
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "property" }
            },
            "required": ["type"]
          },
          "then": {
            "required": ["access_mod"]
          }
        }
      ]
    },
    "ChildEntity": {
      "allOf": [
        { "$ref": "#/definitions/BaseEntity" },
        {
          "required": ["identifier", "name", "value_type"]
        },
        {
          "if": {
            "properties": {
              "value_type": { "const": "object" }
            },
            "required": ["value_type"]
          },
          "then": {
            "required": ["children"]
          },
          "else": {
            "not": {
              "required": ["children"]
            }
          }
        }
      ]
    }
  }
}